<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>
            netstandard2.0;net40;net45;net451;net452;net46;net461;net462
        </TargetFrameworks>
    </PropertyGroup>
    <!--Nuget-->
    <PropertyGroup>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <Description>Contracts for DDD/CQRS development</Description>
        <PackageTags>cronus, ddd, cqrs, modeling, domain, aggregate, root, entity, command, event, projection, saga, tenant, urn, port</PackageTags>
        <PackageId>Cronus.DomainModeling</PackageId>
        <Authors>Elders</Authors>
        <PackageIconUrl>https://raw.githubusercontent.com/Elders/Cronus/master/Cronus.png</PackageIconUrl>
        <RepositoryUrl>https://github.com/Elders/Cronus</RepositoryUrl>
        <RepositoryType>Library</RepositoryType>
        <PackageProjectUrl>https://github.com/Elders/Cronus</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/Elders/Cronus/blob/master/LICENSE</PackageLicenseUrl>
        <RootNamespace>Elders.Cronus</RootNamespace>
    </PropertyGroup>

    <!--netstandard2.0-->
    <PropertyGroup Condition="'$(TargetFramework)'=='netstandard2.0'">
        <DefineConstants>TRACE;DEBUG;NETSTANDARD2_0;</DefineConstants>
    </PropertyGroup>
    <ItemGroup Condition="'$(TargetFramework)'=='netstandard2.0'">
        <PackageReference Include="Microsoft.CSharp" Version="4.4.1" />
    </ItemGroup>

    <!--netstandard2.0 == false-->
    <PropertyGroup Condition="'$(TargetFramework)'!='netstandard2.0'">
        <DefineConstants>TRACE;DEBUG;LIBLOG_PORTABLE</DefineConstants>
    </PropertyGroup>
    <ItemGroup Condition="'$(TargetFramework)'!='netstandard2.0'">
        <Reference Include="mscorlib" />
        <Reference Include="System" />
        <Reference Include="System.Core" />
        <Reference Include="Microsoft.CSharp" />
    </ItemGroup>
</Project>
